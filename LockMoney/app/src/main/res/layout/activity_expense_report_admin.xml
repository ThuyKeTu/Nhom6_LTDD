<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5F5"
    android:orientation="vertical">
    <LinearLayout android:gravity="start"
        android:id="@+id/linearRowarrowback"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_expense_report_header">
        <ImageView android:id="@+id/imageArrowback"
            android:layout_height="15dp"
            android:layout_marginBottom="125dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrowback"
            tools:ignore="ContentDescription" tools:src="@drawable/img_arrowback"/>


        <LinearLayout
            android:id="@+id/linearColumnthngk"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginTop="8.16dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.97"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="347dp"
                android:layout_height="60dp"
                android:paddingTop="20dp"
                android:text="@string/a_expense_bcct"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearComboboxlistm"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/_5pxh"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.43"
                android:background="@drawable/rectangle_bg_white_a700_radius_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtZipcode"
                    style="@style/txtIntersemibold13"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_weight="0.8"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="2023"
                    tools:text="2023" />

                <ImageView
                    android:id="@+id/imageIconarrowbottOne"
                    android:layout_width="@dimen/_15pxh"
                    android:layout_height="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_11pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_marginEnd="@dimen/_5pxh"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_iconarrowbott"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_iconarrowbott" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_button_choose_expense_report">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:text="@string/a_expense_tt"
            android:background="@drawable/rounded_left_border"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_22pxh"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:onClick="onTextViewClick" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:text="@string/a_expense_tc"
            android:background="@drawable/left_right_border"
            android:textSize="@dimen/_22pxh"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center"
            android:textStyle="bold"

            android:onClick="onTextViewClick" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/a_expense_tong"
            android:paddingTop="8dp"
            android:textSize="@dimen/_22pxh"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:onClick="onTextViewClick" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:background="@drawable/bg_setting">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_setting"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="@string/a_expense_tt"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_income"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:text="9.000.000.000đ"
            android:gravity="right"
            android:textColor="#555555"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_setting"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="@string/a_expense_tc"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:text="5.832.000.000đ"
            android:gravity="right"
            android:textColor="#555555"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_setting"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="@string/a_expense_tong"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:gravity="right"
            android:text="3.168.000.000đ"
            android:textColor="#555555"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
